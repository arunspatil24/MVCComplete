@model _06EFCodeFirst.Models.Student
@{
                /**/

                ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Home", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Id)
    <div class="form-group">
        @Html.LabelFor(s => s.Name, new { @class = "control-label" })
        @Html.TextBoxFor(s => s.Name, new { @class = "form-control" })
    </div>


    <div class="form-group">
        @Html.LabelFor(s => s.Age, new { @class = "control-label" })
        @Html.TextBoxFor(s => s.Age, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(s => s.City, new { @class = "control-label" })
        @Html.TextBoxFor(s => s.City, new { @class = "form-control" })
    </div>


    <input type="submit" value="Update" class="btn btn-info" />


}