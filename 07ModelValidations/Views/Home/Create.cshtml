@model _07ModelValidations.Models.Employee
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Home", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(e => e.Name, new { @class = "control-label" })
        @Html.TextBoxFor(e => e.Name)
        @Html.ValidationMessageFor(e => e.Name, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.Salary, new { @class = "control-label" })
        @Html.TextBoxFor(e => e.Salary)
        @Html.ValidationMessageFor(e => e.Salary, null, new { @class = "text-danger" })
    </div>

    <input type="submit" value="Create" class="btn btn-info" />
}
@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
